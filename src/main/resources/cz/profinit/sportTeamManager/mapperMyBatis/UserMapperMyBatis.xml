<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cz.profinit.sportTeamManager.mapperMyBatis.UserMapperMyBatis">
    <resultMap id="userResultMap" type="RegisteredUser">
        <id property="entityId" column="c_id"/>
        <result property="name" column="c_name"/>
        <result property="surname" column="c_surname"/>
        <result property="password" column="c_password"/>
        <result property="email" column="c_email"/>
        <result property="role" column="c_role"/>
    </resultMap>

    <select id="findUserByEmail" parameterType="String" resultMap="userResultMap">
        SELECT * FROM t_user WHERE c_email = #{email}
    </select>

    <select id="findUserById" parameterType="Long" resultMap="userResultMap">
        SELECT * FROM t_user WHERE c_id = #{id}
    </select>

    <select id="insertUser" parameterType="RegisteredUser" resultMap="userResultMap">
        INSERT INTO t_user (c_name, c_surname, c_password, c_email, c_role)
        VALUES (#{name}, #{surname}, #{password}, #{email}, #{role})
        RETURNING *
    </select>
    
    <select id="deleteUserById" parameterType="Long" resultMap="userResultMap">
        DELETE FROM t_user WHERE c_id = #{id}
        RETURNING *
    </select>

    <select id="deleteUserByEmail" parameterType="String" resultMap="userResultMap">
        DELETE FROM t_user WHERE c_email = #{email}
        RETURNING *
    </select>

    <select id="updateUser" parameterType="RegisteredUser" resultMap="userResultMap">
        UPDATE t_user SET c_name=#{name}, c_surname=#{surname}, c_password=#{password}, c_email=#{email}, c_role=#{role}
        WHERE c_id = #{entityId}
        RETURNING *
    </select>
</mapper>