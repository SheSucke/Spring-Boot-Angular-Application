<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <!-- STATUS_ENUM -->
    <!--
    1=ACCEPTED
    2=PENDING
    3=REJECTED
    -->
    <changeSet id="8_1-1" author="dstepanek">
        <createTable tableName="status_enum">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" primaryKeyName="status_enum_pk"/>
            </column>
            <column name="enum" type="VARCHAR(8)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <insert tableName="status_enum">
            <column name="enum" value="ACCEPTED"/>
        </insert>
        <insert tableName="status_enum">
            <column name="enum" value="PENDING"/>
        </insert>
        <insert tableName="status_enum">
            <column name="enum" value="REJECTED"/>
        </insert>
    </changeSet>

    <!-- INVITATION -->
    <changeSet id="8-1" author="dstepanek">
        <createTable tableName="invitation">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" primaryKeyName="invitation_pkey"/>
            </column>
            <column name="created" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="changed" type="TIMESTAMP"/>
            <column name="status" type="INT">
                <constraints nullable="false" foreignKeyName="status_enum_fk" references="status_enum(id)"/>
            </column>
            <column name="event_id" type="INT">
                <constraints nullable="false" foreignKeyName="event_fk" references="event(id)"/>
            </column>
        </createTable>
    </changeSet>


</databaseChangeLog>