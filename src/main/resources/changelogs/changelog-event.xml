<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
            http://www.liquibase.org/xml/ns/pro
            http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd
            http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <!-- EVENT -->
    <changeSet id="6-1" author="dstepanek">
        <createTable tableName="event">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" primaryKeyName="event_pkey"/>
            </column>
            <column name="date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="capacity" type="INT"/>
            <column name="created_by" type="INT">
                <constraints nullable="false" foreignKeyName="user_fk" references="user(id)"/>
            </column>
            <column name="place_id" type="INT">
                <constraints nullable="false" foreignKeyName="place_fk" references="place(id)"/>
            </column>
        </createTable>
    </changeSet>


</databaseChangeLog>