<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
            http://www.liquibase.org/xml/ns/pro
            http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd
            http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <!-- MESSAGE -->
    <changeSet id="7-1" author="dstepanek">
        <createTable tableName="message">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" primaryKeyName="message_pkey"/>
            </column>
            <column name="text" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="INT">
                <constraints nullable="false" foreignKeyName="user_fk" references="user(id)"/>
            </column>
            <column name="event_id" type="INT">
                <constraints nullable="false" foreignKeyName="event_fk" references="event(id)"/>
            </column>
        </createTable>
    </changeSet>


</databaseChangeLog>